[user]
        name = Richard Oberkofler
        email = 102246582+richardoberkofler@users.noreply.github.com

[github]
        user = richardoberkofler

[alias]
        st = status
        co = checkout
        br = branch
        ci = commit
        lg = log --oneline --graph --decorate
        undo = reset --soft HEAD~1
        last = log -1 HEAD
        amend = commit --amend --no-edit

[core]
        editor = nano
        sshCommand = ssh.exe

[gpg]
        format = ssh

[init]
        defaultBranch = master

[commit]
        gpgsign = true

[push]
        default = simple

[pull]
        rebase = true

[diff]
        tool = vimdiff
        color = auto

[merge]
        tool = vimdiff
