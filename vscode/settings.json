{
  // ===================== UI: Theme & Appearance ====================
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Atom One Dark",
  "workbench.colorCustomizations": {
    "[Atom One Dark]": {
      "sideBar.background": "#282c34"
    }
  },
  "workbench.activityBar.location": "top",
  "workbench.sideBar.location": "right",

  "workbench.statusBar.visible": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "window.zoomLevel": 0,
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.indent": 10,
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": false,
  "material-icon-theme.hidesExplorerArrows": true,
  "git.decorations.enabled": false,

  // ===================== Editor: Font & Layout =====================
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "line",
  "editor.stickyScroll.enabled": false,
  "editor.codeLens": false,
  "editor.matchBrackets": "never",
  "editor.hover.enabled": true,
  "editor.lineNumbers": "relative",
  "editor.showFoldingControls": "never",
  "editor.guides.indentation": false,
  "editor.renderWhitespace": "selection",
  "editor.renderLineHighlight": "none",
  "editor.occurrencesHighlight": "off",
  "editor.selectionHighlight": true,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.quickSuggestions": {
    "other": "off",
    "comments": "off",
    "strings": "off"
  },
  "editor.suggestOnTriggerCharacters": false,
  "editor.tabCompletion": "on",
  "editor.snippetSuggestions": "top",
  "emmet.triggerExpansionOnTab": true,
  "editor.tabSize": 2,
  "editor.unicodeHighlight.invisibleCharacters": false,

  // ===================== Editor: Behavior & Files =====================
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "afterDelay",
  "files.exclude": {
    "**/.git": false
  },
  "scm.diffDecorations": "all",

  // ===================== Language Specific =====================
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ===================== Python =====================
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.typeCheckingMode": "standard",
  "python.defaultInterpreterPath": "C:\\Users\\u19n38\\AppData\\Local\\Programs\\Python\\Python310\\python.exe",

  "jupyter.askForKernelRestart": false,

  // ===================== Terminal =====================
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // ===================== Extensions & Recommendations =====================
  "extensions.ignoreRecommendations": true,

  // ===================== Git =====================
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoreMissingGitWarning": true,

  // ===================== Copilot & AI =====================
  "github.copilot.selectedCompletionModel": "",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.chat.terminalChatLocation": "terminal",
  "github.copilot.nextEditSuggestions.enabled": true,

  // ===================== Miscellaneous =====================
  "workbench.editorAssociations": {
    "*.db": "sqlite-viewer.option"
  },
  "sqliteViewer.maxFileSize": 4000,
  "cSpell.maxDuplicateProblems": 3,
  "cSpell.userWords": ["iterrows", "notna", "Oberkofler", "sqlmodel"],
  "remote.SSH.remotePlatform": {
    "192.168.110.50": "linux",
    "192.168.110.51": "linux",
    "10.1.2.31": "linux",
    "10.1.2.11": "linux",
    "10.1.1.11": "linux"
  },
  "hediet.vscode-drawio.resizeImages": null,
  "remote.autoForwardPortsSource": "hybrid",
  "gitlens.graph.minimap.additionalTypes": ["localBranches", "stashes", "tags"],
  "chat.commandCenter.enabled": false,
  "testExplorer.useNativeTesting": true,

}
